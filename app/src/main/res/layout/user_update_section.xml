<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/UserUpdate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Activities.Post_Ads_Page">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button3"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/shape"
        android:backgroundTint="#fff"
        android:elevation="15dp"
        android:focusable="true"
        android:fontFamily="@font/doppio_one"
        android:text="Delete Ad"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textColorHint="#6D6B6B"
        android:textSize="18dp" />

    <androidx.cardview.widget.CardView
        android:id="@id/card"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:elevation="5dp"
        android:background="@drawable/shape6"
        android:backgroundTint="#fff"
        android:gravity="fill"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/download" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/card"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/shape6"
        android:backgroundTint="#EDEDED"
        android:elevation=".5dp"
        android:fontFamily="@font/doppio_one"
        android:hint="Product name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textAlignment="textStart"
        android:textColor="#444"
        android:textColorHint="#444"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:layout_below="@id/textView10"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/shape6"
        android:backgroundTint="#EDEDED"
        android:elevation=".5dp"
        android:fontFamily="@font/doppio_one"
        android:hint="Enter Price"
        android:inputType="numberDecimal"
        android:paddingStart="10dp"
        android:textColor="#444"
        android:textColorHint="#444"
        android:textSize="17dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape"
        android:backgroundTint="#fff"
        android:elevation="15dp"
        android:focusable="true"
        android:fontFamily="@font/doppio_one"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textColorHint="#6D6B6B"
        android:textSize="18dp" />


    <EditText
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/textView9"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/shape6"
        android:backgroundTint="#EDEDED"
        android:elevation=".5dp"
        android:fontFamily="@font/doppio_one"
        android:gravity="top"
        android:hint="Product Description"
        android:paddingStart="10dp"
        android:textColor="#444"
        android:textColorHint="#444"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/switch1"
        android:layout_width="155dp"
        android:layout_height="036dp"
        android:layout_below="@id/textView10"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/shape6"
        android:backgroundTint="#EDEDED"
        android:elevation=".5dp"
        android:fontFamily="@font/doppio_one"
        android:hint="Rent/Sell"
        android:paddingStart="10dp"
        android:textColor="#444"
        android:textColorHint="#444"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="26dp"
        android:fontFamily="@font/doppio_one"
        android:text="Enter renting price"
        android:textColor="#444"
        android:textSize="16sp" />


</RelativeLayout>