<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/PstAd"
    tools:context=".Activities.Post_Ads_Page">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/nav_background"
        android:layout_alignParentBottom="true"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/colorPrimary"
        android:elevation="10dp"
        app:itemTextColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:cardElevation="10dp"
        android:background="@drawable/shape"
        android:backgroundTint="#fff"
        android:gravity="fill"
        app:cardCornerRadius="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/download"
                android:background="@drawable/shape"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/com"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Image is compulsory"
        android:textAlignment="center"
        android:textColor="#444"
        android:fontFamily="@font/doppio_one"
        android:textSize="16sp"
        android:layout_below="@id/cardView3" />

    <EditText
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/shape6"
        android:hint="Product name"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:fontFamily="@font/doppio_one"
        android:textAlignment="textStart"
        android:elevation=".5dp"
        android:textColor="#000"
        android:backgroundTint="#F4F4F4"
        android:textColorHint="#000"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:layout_below="@+id/com"/>


    <EditText
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/shape6"
        android:backgroundTint="#F4F4F4"
        android:gravity="top"
        android:elevation=".5dp"
        android:hint="Product description"
        android:paddingStart="10dp"
        android:textColor="#000"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/doppio_one"
        android:textColorHint="#000"
        android:textSize="18dp"
        android:layout_below="@+id/textView9"/>

    <EditText
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/shape6"
        android:backgroundTint="#F4F4F4"
        android:fontFamily="@font/doppio_one"
        android:hint="Product price"
        android:inputType="number"
        android:paddingStart="10dp"
        android:elevation=".5dp"
        android:paddingEnd="20dp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="18sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView10"/>


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter renting price"
        android:textColor="#444"
        android:textSize="16sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/doppio_one"
        android:layout_marginEnd="26dp"
        android:layout_below="@+id/textView3"/>


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch1"
        android:layout_width="146dp"
        android:layout_height="34dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/shape6"
        android:backgroundTint="#F4F4F4"
        android:layout_below="@id/textView10"
        android:layout_toEndOf="@id/textView3"
        android:text="Rent"
        android:textColor="#000"
        android:elevation=".5dp"
        android:fontFamily="@font/doppio_one"
        android:paddingStart="10dp"
        android:longClickable="true"
        android:textSize="17dp"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/bottom3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/shape"
        android:backgroundTint="#fff"
        android:elevation="15dp"
        android:text="Post"
        android:textAllCaps="false"
        android:fontFamily="@font/doppio_one"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_below="@id/textView8"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:textSize="14dp"
        android:text="Slide switch to Sell"
        android:textColor="#fff"
        android:fontFamily="sans-serif-light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

</RelativeLayout>