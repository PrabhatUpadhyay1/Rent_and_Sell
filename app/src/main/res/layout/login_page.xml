<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="5dp"
    tools:context=".Login_Details.Login_Page">


    <ImageView
        android:id="@+id/Logo"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/login" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Logo"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/doppio_one"
            android:orientation="horizontal"
            android:text="Welcome back!"
            android:textColor="#444"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView14"
            android:layout_marginStart="25dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/doppio_one"
            android:orientation="horizontal"
            android:text="Log In to your existing account of Rent and Sell"
            android:textColor="#444"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/textView15"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/shape"
            android:backgroundTint="#EDEDED"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:drawablePadding="7dp"
            android:ems="10"
            android:elevation=".5dp"
            android:fontFamily="@font/doppio_one"
            android:hint="Enter your Email"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:textColor="#444"
            android:textColorHint="#444"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/password1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/email1"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/shape"
            android:backgroundTint="#EDEDED"
            android:elevation=".5dp"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:drawablePadding="7dp"
            android:ems="10"
            android:fontFamily="@font/doppio_one"
            android:hint="Create a password"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textColor="#444"
            android:textColorHint="#444"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/forgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password1"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/doppio_one"
            android:gravity="end"
            android:linksClickable="true"
            android:text="Forget Password ?"
            android:textColor="#2196F3"
            android:textSize="17sp" />

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/forgetpassword"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/shape"
            android:backgroundTint="#fff"
            android:clickable="false"
            android:drawableStart="@drawable/email"
            android:drawableTint="@color/colorPrimary"
            android:elevation="18dp"
            android:fontFamily="@font/doppio_one"
            android:longClickable="true"
            android:paddingStart="10dp"
            android:paddingEnd="30dp"
            android:text="Log In"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginbtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/creataccount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loginbtn"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/doppio_one"
                android:gravity="center"
                android:text="Create an account"
                android:textColor="#444"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/creataccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loginbtn"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/creataccount1"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/doppio_one"
                android:gravity="center"
                android:text="Sign Up"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>